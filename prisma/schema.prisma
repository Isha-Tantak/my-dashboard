generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vendor {
  id         Int       @id @default(autoincrement())
  name       String
  createdAt  DateTime  @default(now())
  address    String?
  externalId String?   @unique
  taxId      String?
  invoices   Invoice[]
}

model Customer {
  id         Int       @id @default(autoincrement())
  externalId String?   @unique
  name       String
  address    String?
  createdAt  DateTime  @default(now())
  invoices   Invoice[]
}

model Document {
  id          Int       @id @default(autoincrement())
  analyticsId String?   @unique
  fileName    String
  filePath    String?
  fileSize    Int?
  fileType    String?
  status      String?
  processedAt DateTime?
  createdAt   DateTime  @default(now())
  invoice     Invoice?
}

model Invoice {
  id            Int        @id @default(autoincrement())
  invoiceNumber String?
  vendorId      Int
  status        String?
  createdAt     DateTime   @default(now())
  currency      String?
  customerId    Int?
  deliveryDate  DateTime?
  documentId    Int?       @unique
  externalId    String?    @unique
  invoiceDate   DateTime?
  invoiceTotal  Float?
  subTotal      Float?
  totalTax      Float?
  customer      Customer?  @relation(fields: [customerId], references: [id])
  document      Document?  @relation(fields: [documentId], references: [id])
  vendor        Vendor     @relation(fields: [vendorId], references: [id])
  lineItems     LineItem[]
  payments      Payment[]
}

model LineItem {
  id          Int     @id @default(autoincrement())
  invoiceId   Int
  description String?
  quantity    Float?
  accountCode String?
  srNo        Int?
  totalPrice  Float?
  unitPrice   Float?
  vatRate     Float?
  invoice     Invoice @relation(fields: [invoiceId], references: [id])
}

model Payment {
  id          Int       @id @default(autoincrement())
  invoiceId   Int
  amount      Float?
  bankAccount String?
  createdAt   DateTime  @default(now())
  dueDate     DateTime?
  invoice     Invoice   @relation(fields: [invoiceId], references: [id])
}
